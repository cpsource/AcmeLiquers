{
  "name": "acme-liquors",
  "version": "1.0.0",
  "private": true,
  "description": "ACME Liquors AWS Order System",
  "workspaces": [
    "infrastructure",
    "services/shared",
    "services/order-api",
    "services/order-processor",
    "services/stream-processor",
    "services/analytics-export",
    "migration"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "test": "jest",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:e2e": "jest tests/e2e",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "cdk": "cdk",
    "deploy": "cdk deploy --all",
    "synth": "cdk synth",
    "lint": "eslint . --ext .ts",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.10.0",
    "aws-cdk": "^2.170.0",
    "aws-sdk-client-mock": "^3.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.3.0"
  }
}
