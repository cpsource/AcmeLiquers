{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": false,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": ".",
    "types": ["jest", "node"]
  },
  "include": ["./**/*"],
  "exclude": ["node_modules", "dist"],
  "references": [
    { "path": "../services/shared" },
    { "path": "../services/order-api" },
    { "path": "../services/order-processor" }
  ]
}
